<view class="container">
  <!-- 头部 -->
  <view class="header">
    <view class="publish-container" bind:tap="onPublish">
      <i class="iconfont iconfabu"></i>
    </view>
    <view class="search-container">
      <x-search bind:search="onSearch" iconfont="iconfont" iconsousuo="iconsousuo"></x-search>
    </view>
  </view>
  
  <!-- 卡片列表 -->

  <view class="blog-list">
    <block wx:for="{{blogList}}" wx:key="*this">
       <view class="blog-panel">
         <x-blog-card blog="{{item}}" bind:tap="goToComment" data-blogid="{{item._id}}"></x-blog-card>
       </view>
    </block>
      


  </view>
  <!-- 底部弹出层 -->
  <x-login bind:loginsuccess="onLoginSuccess" bind:loginfail="onLoginFail" showModal="{{showModal}}"></x-login>
</view>